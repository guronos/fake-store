{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": ["plugin:vue/vue3-essential", "google", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "no-alert": "off",
    "max-len": [2, { "code": 180, "tabWidth": 4, "ignoreUrls": true }],
    "comma-dangle": ["error"],
    "no-continue": "off",
    "import/extensions": "off"
  }
}
